function saveSoil() {
  const inputs = document.querySelectorAll('#soil input');
  const values = Array.from(inputs).map(i => i.placeholder + ': ' + i.value).join('<br>');
  document.getElementById('soilResult').innerHTML = "<strong>–í–≤–µ–¥–µ–Ω—ñ –¥–∞–Ω—ñ:</strong><br>" + values;
}

function saveWeather() {
  const inputs = document.querySelectorAll('#weather input');
  const notes = document.querySelector('#weather textarea').value;
  const values = Array.from(inputs).map(i => i.placeholder + ': ' + i.value).join('<br>');
  document.getElementById('weatherResult').innerHTML = "<strong>–í–≤–µ–¥–µ–Ω—ñ –¥–∞–Ω—ñ:</strong><br>" + values + "<br>–ü—Ä–∏–º—ñ—Ç–∫–∏: " + notes;
}

function saveSeason() {
  const inputs = document.querySelectorAll('#seasons input');
  const notes = document.querySelector('#seasons textarea').value;
  const values = Array.from(inputs).map(i => i.placeholder + ': ' + i.value).join('<br>');
  document.getElementById('seasonResult').innerHTML = "<strong>–í–≤–µ–¥–µ–Ω—ñ –¥–∞–Ω—ñ:</strong><br>" + values + "<br>–ü—Ä–∏–º—ñ—Ç–∫–∏: " + notes;
}


function saveSoil() {
  const inputs = document.querySelectorAll('#soil input');
  const values = Array.from(inputs).map(i => i.placeholder + ': ' + i.value).join('<br>');
  document.getElementById('soilResult').innerHTML = "<strong>–í–≤–µ–¥–µ–Ω—ñ –¥–∞–Ω—ñ:</strong><br>" + values;

  // –û—á–∏—â–µ–Ω–Ω—è –ø–æ–ª—ñ–≤
  inputs.forEach(i => i.value = '');
}

function saveWeather() {
  const inputs = document.querySelectorAll('#weather input');
  const textarea = document.querySelector('#weather textarea');
  const values = Array.from(inputs).map(i => i.placeholder + ': ' + i.value).join('<br>');
  document.getElementById('weatherResult').innerHTML = "<strong>–í–≤–µ–¥–µ–Ω—ñ –¥–∞–Ω—ñ:</strong><br>" + values + "<br>–ü—Ä–∏–º—ñ—Ç–∫–∏: " + textarea.value;

  // –û—á–∏—â–µ–Ω–Ω—è –ø–æ–ª—ñ–≤
  inputs.forEach(i => i.value = '');
  textarea.value = '';
}

function saveSeason() {
  const inputs = document.querySelectorAll('#seasons input');
  const textarea = document.querySelector('#seasons textarea');
  const values = Array.from(inputs).map(i => i.placeholder + ': ' + i.value).join('<br>');
  document.getElementById('seasonResult').innerHTML = "<strong>–í–≤–µ–¥–µ–Ω—ñ –¥–∞–Ω—ñ:</strong><br>" + values + "<br>–ü—Ä–∏–º—ñ—Ç–∫–∏: " + textarea.value;

  // –û—á–∏—â–µ–Ω–Ω—è –ø–æ–ª—ñ–≤
  inputs.forEach(i => i.value = '');
  textarea.value = '';
}



function openTab(tabId) {
  const contents = document.querySelectorAll('.tab-content');
  contents.forEach(content => content.style.display = 'none');

  const tab = document.getElementById(tabId);
  if (tab) tab.style.display = 'block';
}

function registerUser() {
  const name = document.getElementById('regName').value;
  const email = document.getElementById('regEmail').value;
  const password = document.getElementById('regPassword').value;

  if (name && email && password) {
    const user = { name, email, password };
    localStorage.setItem('user', JSON.stringify(user));
    document.getElementById('regMessage').textContent = "‚úÖ –†–µ—î—Å—Ç—Ä–∞—Ü—ñ—è —É—Å–ø—ñ—à–Ω–∞!";
  } else {
    document.getElementById('regMessage').textContent = "‚ùó –í—Å—ñ –ø–æ–ª—è –æ–±–æ–≤‚Äô—è–∑–∫–æ–≤—ñ!";
  }
}

function loadUser() {
  const user = JSON.parse(localStorage.getItem('user'));
  if (user) {
    document.getElementById('adminName').textContent = user.name;
    document.getElementById('adminEmail').textContent = user.email;
    document.getElementById('adminPassword').textContent = user.password;
    document.getElementById('adminUserInfo').style.display = 'block';
  } else {
    alert("‚ùó –ö–æ—Ä–∏—Å—Ç—É–≤–∞—á–∞ –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ.");
  }
}
document.addEventListener('DOMContentLoaded', () => {
  openTab('home');
});

function checkAdminAccess() {
  const correctPassword = "sa290583"; // üîí –ó–º—ñ–Ω–∏ –Ω–∞ —Å–≤—ñ–π –ø–∞—Ä–æ–ª—å
  const input = prompt("–í–≤–µ–¥—ñ—Ç—å –ø–∞—Ä–æ–ª—å –¥–ª—è –¥–æ—Å—Ç—É–ø—É –¥–æ –ø–∞–Ω–µ–ª—ñ –∞–¥–º—ñ–Ω—ñ—Å—Ç—Ä–∞—Ç–æ—Ä–∞:");

  if (input === correctPassword) {
    openTab('admin');
  } else if (input !== null) {
    alert("‚ùå –ù–µ–≤—ñ—Ä–Ω–∏–π –ø–∞—Ä–æ–ª—å!");
  }
}



